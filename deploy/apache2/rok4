<VirtualHost *:80>

        # acces a proj4...
        SetEnv LD_LIBRARY_PATH /usr/local/lib

	ServerAdmin webmaster@localhost
	
	DocumentRoot /var/www/hudson
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>

	<Directory /var/www/hudson>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>

        ScriptAlias /rok4/bin/ /var/www/hudson/rok4/bin/
        <Directory "/var/www/hudson/rok4/bin/">
                AllowOverride None
#                Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch -Indexes
                Options None
                SetHandler  fastcgi-script
                Order allow,deny
                Allow from all
        </Directory>
        FastCgiServer /var/www/hudson/rok4/bin/WMSServer -initial-env LD_LIBRARY_PATH=/usr/lib:/usr/local/lib:/var/www/hudson/rok4/lib -init-start-delay 5 -port 1998 


        #
	# Les docs doxygen
        #
    	#Alias /rok4/doc/ "/var/www/hudson/rok4/docs/html/"
        <Directory "/var/www/hudson/rok4/docs/html/">
            DirectoryIndex index.html
            AllowOverride None
            Order deny,allow
            Allow from all
            # Allow from 127.0.0.0/255.0.0.0 ::1/128
        </Directory>

	#
	# Les packages
	#
    	Alias /rok4/builds/ "/var/www/hudson/rok4/builds/"
        <Directory "/var/www/hudson/builds/rok4/">
            Options Indexes FollowSymLinks MultiViews
            AllowOverride None
            Order deny,allow
            Allow from all
            # Allow from 127.0.0.0/255.0.0.0 ::1/128
        </Directory>


	ErrorLog /var/log/apache2/error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel debug

	CustomLog /var/log/apache2/rok4.log combined
</VirtualHost>
