<?xml version="1.0" encoding='US-ASCII'?>
<param>
        <!-- a choisir parmi ortho/parcellaire/scan[25|50|100|dep|reg|1000]/franceraster -->
        <ss_produit>ortho</ss_produit>
        <!-- soit un repertoire contenant les images source soit un fichier de dalles source issu d'un calcul de pyramide precedent -->
        <images_source>/mnt/bdortho/TIF-RVB-0M50-L93/BDO_RVB_0M50_TIF_LAMB93_D75-ED08</images_source>
        <!-- facultatif : soit un repertoire contenant des masques de mtd soit un fichier de mtd source issu d'un calcul de pyramide precedent -->
        <!--<masques_metadonnees></masques_metadonnees>-->
        <!-- systeme de coordonnees des donnees source sous la forme autorite:projection -->
        <systeme_coordonnees_source>IGNF:LAMB93</systeme_coordonnees_source>
        <!-- a choisir parmi OUI/NON pour utiliser la nomenclature standard des dalles raster a l'IGN -->
		<nomenclature_IGN>OUI</nomenclature_IGN>
		<!-- facultatif : resolution en X des donnees source (UNITES DU SRS) -->
		<resolution_x_source>0.5</resolution_x_source>
        <!-- facultatif : resolution en Y des donnees source (UNITES DU SRS) -->
		<resolution_y_source>0.5</resolution_y_source>
        <!-- facultatif : taille des images source en pixels selon l'axe X -->
		<taille_pixels_x_source>2000</taille_pixels_x_source>
        <!-- facultatif : taille des images source en pixels selon l'axe Y -->
		<taille_pixels_y_source>2000</taille_pixels_y_source>
        <!-- NB : si nomenclature_IGN vaut OUI resolution_x_source resolution_y_source taille_pixels_x_source taille_pixels_y_source doivent etre definis -->
		<!-- annee des donnees source -->
		<annee>2008</annee>
        <!-- facultatif : departement des donnees source -->
        <departement>75</departement>
        <!-- chemin vers le repertoire ou stocker la pyramide -->
        <repertoire_pyramide>/mnt/geoportail/Chataigner/TestCache</repertoire_pyramide>
        <!-- chemin vers le fichier de LAYER qui contiendra la pyramide -->
        <fichier_layer>/mnt/geoportail/Chataigner/TestCache/ORTHO_RAW.lay</fichier_layer>
        <!-- compression des images de la pyramide : a choisir parmi raw/jpeg/png -->
        <compression_images_pyramide>raw</compression_images_pyramide>
        <!-- systeme de coordonnees de la pyramide sous la forme autorite:projection -->
		<systeme_coordonnees_pyramide>IGNF:LAMB93</systeme_coordonnees_pyramide>
        <!-- chemin vers le repertoire ou stocker les fihciers temporaires du traitement -->
		<repertoire_fichiers_temporaires>/mnt/geoportail/Chataigner/TestCache</repertoire_fichiers_temporaires>
        <!-- taille des dalles de la pyramide en pixels -->
		<taille_dalles_pixels>4096</taille_dalles_pixels>
        <!-- pourcentage de dilatation a appliquer aux dalles du cache pour tester leur intersection avec les dalles source (securite) -->
		<pcent_dilatation_dalles_base>10</pcent_dilatation_dalles_base>
        <!-- pourcentage de dilatation a appliquer aux dalles source reprojetees pour tester leur intersection avec les dalles cache securite) -->
		<pcent_dilatation_reproj>20</pcent_dilatation_reproj>
        <!-- chemin et prefixe pour les scripts de creation de la pyramide -->
		<prefixe_nom_script>../tmp/test_75</prefixe_nom_script>
        <!-- nombre de jobs minimum pour separer le calcul en sous-calculs independants (calcul partage) -->
		<nombre_batch_min>16</nombre_batch_min>
        <!-- facultatif (sauf en cas de compression avec perte et/ou de reprojection) : chemin vers le serv eur ROK4 -->
        <localisation_rok4>obernai.ign.fr/rok4/bin/rok4</localisation_rok4>
        <!-- facultatif (sauf en cas de compression avec perte et/ou de reprojection) : nom du LAYER ou effectuer les requetes -->
        <layer_wms>ORTHO_RAW</layer_wms>
</param>

